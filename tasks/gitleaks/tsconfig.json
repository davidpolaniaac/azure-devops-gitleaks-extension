{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "types": [
      "node",
      "q",
      "jest",
      "jest-when"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}