{
    "id": "2a41d796-5f66-441c-b225-b6b0d6863071",
    "name": "gitleaks",
    "friendlyName": "Gitleaks",
    "description": "Scan git repos for secrets using regex and entropy",
    "helpMarkDown": "Gitleaks is a SAST tool for detecting hardcoded secrets",
    "category": "Utility",
    "visibility": [
        "Release",
        "Build"
    ],
    "demands": [
        "npm"
    ],
    "author": "davidpolaniaac",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 32
    },
    "instanceNameFormat": "Git Scan",
    "inputs": [
        {
            "name": "type",
            "type": "pickList",
            "label": "Type",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "File Path or Inline Rules",
            "options": {
                "InlineRules": "Inline Rules",
                "FilePath": "File Path",
                "Default": "Default Rules"
            }
        },
        {
            "name": "rulesFile",
            "aliases": [
                "rulesTomlFile"
            ],
            "type": "filePath",
            "label": "Rules",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Load config from target repo. Config file must be '.gitleaks.toml' or 'gitleaks.toml'",
            "visibleRule": "type = FilePath"
        },
        {
            "name": "rules",
            "type": "multiLine",
            "label": "Rules",
            "defaultValue": "[[rules]]",
            "required": true,
            "properties": {
                "resizable": true,
                "rows": "20"
            },
            "helpMarkDown": "Write your rules and have fun",
            "visibleRule": "type = InlineRules"
        },
        {
            "name": "workingDirectory",
            "type": "filePath",
            "label": "Working directory",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Working directory in which to run the git scan. If not specified, the repository root directory is used."
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}